<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :Email %><br />
  <%= f.email_field :email ,:required => true, :autofocus => true %></div>

  <div><%= f.label :Password %><br />
  <%= f.password_field :password ,:required => true   %></div>

  <div><%= f.label :Password_Confirmation %><br />
  <%= f.password_field :password_confirmation ,:required => true %></div>

  <div><%= f.label :fname,"First Name" %><br />
  <%= f.text_field :fname, :autofocus=> true ,:required => true %></div>
  
  <div><%= f.label :lname,"Last_Name" %><br />
  <%= f.text_field :lname, :autofocus=> true , :required => true%></div>
  
  <div><%= f.label :dob,"Date of Birth" %><br />
  <%= f.date_field :dob, :autofocus=> true ,:required => true %></div>
  
  <div><%= f.label :Mobile%><br />
  <%= f.text_field :mobile , :autofocus=> true, :required => true  %></div>
  
  <div >
    <table>  
      <tr>
        <td> <%= f.label :Gender %> </td><td> </td>
        <td> <%= f.label :Male %> <%= f.radio_button(:gender ,"male") %> </td>
        <td> <%= f.label :Female %> <%= f.radio_button(:gender ,"female") %> </td>
      </tr>
     </table>
  </div> 

    
  <div><%= f.label :Address%><br />
  <%= f.text_field :address, :autofocus=> true, :required => true %></div>
  
  <div><%= f.label :City%><br />
  <%= f.text_field :city, :autofocus=> true ,:required => true %></div>
  
  <div><%= f.submit "Sign up"  %></div>

<% end %>

<%= render "devise/shared/links" %>
