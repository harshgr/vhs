<div class="span12">
<center>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :Email %>
  <%= f.email_field :email ,:required => true, :autofocus => true, :placeholder => "happy@mailnator.com" , :class=>"fix_textbox" %></div>

  <div><%= f.label :Password %>
  <%= f.password_field :password ,:required => true, :autofocus => true, :placeholder => "Passwod should be minimum 8 char." , :class=>"fix_textbox" %></div>

  <div><%= f.label :Password_Confirmation %>
  <%= f.password_field :password_confirmation ,:required => true , :autofocus => true, :placeholder => "Passwod should be minimum 8 char.", :class=>"fix_textbox"%></div>

  <div><%= f.label :fname,"First Name" %>
  <%= f.text_field :fname, :autofocus=> true ,:required => true, :placeholder => "Please fill the First-Name" , :class=>"fix_textbox"%></div>
  
  <div><%= f.label :lname,"Last_Name" %>
  <%= f.text_field :lname, :autofocus=> true , :required => true, :placeholder => "Please fill the Last-Name" , :class=>"fix_textbox"%></div>
  
  <div id="sandbox-container" >
     <div class="input-append date" id="dp3" data-date="01-01-1980" data-date-format="dd-mm-yyyy">
        <%= f.label :dob,"Date of Birth" %>
        <%= f.text_field :dob, :autofocus=> true ,:required => true ,:placeholder => "Please fill the Date-Of-Birth" %>
        <span class="add-on"><i class="icon-th"></i></span>
     </div>
 </div>
  
  <div><%= f.label :Mobile%>
  <%= f.text_field :mobile , :autofocus=> true, :required => true ,:placeholder => "Mobile no. should be  10 digits", :class=>"fix_textbox" %></div>
  
  <div >
    <table>  
      <tr>
        <td> <%= f.label :Gender %> </td><td> </td>
        <td> <%= f.label :Male %> <%= f.radio_button(:gender ,"male") %> </td>
        <td> <%= f.label :Female %> <%= f.radio_button(:gender ,"female") %> </td>
      </tr>
     </table>
  </div> 

    
  <div><%= f.label :Address%>
  <%= f.text_field :address, :autofocus=> true, :required => true , :placeholder => "Please fill the current addesss", :class=>"fix_textbox"%></div>
  
  <div><%= f.label :City%>
  <%= f.text_field :city, :autofocus=> true ,:required => true ,:placeholder => "Please fill the city", :class=>"fix_textbox"%></div>
  
  <div><%= f.submit "Sign up"  %></div>

<% end %>
<script>
     $('#sandbox-container .input-append.date').datepicker({});
   
  </script>
<%= render "devise/shared/links" %>
</center>
</div>

